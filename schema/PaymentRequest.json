{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "PaymentRequest",
  "description": "Request an Ethereum payment",
  "properties": {
    "body": {
      "type": "string",
      "title": "Body",
      "description": "Text memo accompanying the request"
    },
    "value": {
      "type": "string",
      "title": "Value",
      "description": "Value of payment denominated in Wei and hex encoded"
    },
    "destinationAddress": {
      "type": "string",
      "title": "Destination Address",
      "description": "Ethereum address of recipient"
    },
    "networkId": {
      "type": "string",
      "title": "Network ID",
      "description": "ID of network on which Payment should be sent - see https://github.com/ethereum/wiki/wiki/JSON-RPC#net_version",
      "enum": [
        null,
        "1",
        "2",
        "3",
        "4",
        "42"
      ]
    }
  },
  "required": [
    "value",
    "destinationAddress"
  ]
}
